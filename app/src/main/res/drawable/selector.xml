<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:angle="90" android:endColor="#F0F0F0" android:startColor="#F0F0F0" android:type="linear" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:angle="90" android:endColor="#F0F0F0" android:startColor="#F0F0F0" android:type="linear" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="true">

        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:angle="90" android:endColor="#F0F0F0" android:startColor="#F0F0F0" android:type="linear" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" /><!-- GREY = 4D4D4D -->
            <gradient android:angle="90" android:endColor="@color/white" android:startColor="@color/white" android:type="linear" />
        </shape>
    </item>
</selector>